#!/bin/bash

# USAGE: copyfile path/to/file
# This script compiles and runs the Rust program in src/main.rs

# Change to the project directory (hardcoded path)
cd "/Users/donaldmoore/src/copyfile" || exit 1

# Build the Rust program (use debug for faster compilation during development)
cargo build --quiet

# Run the Rust program with all passed arguments
exec ~/.config/cargo/debug/copyfile "$@"
